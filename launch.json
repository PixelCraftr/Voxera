{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Launch Voxera",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/main.exe",    // Reference to the output executable
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": false,
          "MIMode": "gdb",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ],
          "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",   // Ensure path to gdb is correct
          "preLaunchTask": "Build C++ File",                   // Matches the task in tasks.json
          "miDebuggerArgs": "",
          "logging": {
              "moduleLoad": false,
              "trace": true,
              "traceResponse": true,
              "engineLogging": true
          }
      }
  ]
}
